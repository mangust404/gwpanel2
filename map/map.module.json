{
  "requires": "", 
  "excludes": "",
  "title": "Модуль для карты и передвижений",
  "weight": 3, 
  "apply": {
    "/me/": ["map_sector"],
    "/map.move.php": ["map_mmupdate"],
    "/map.moving.php": ["map_mmupdate"],
    "/npc.php": ["map_links"],
    "/info.php": ["map_links"],
    "/object.php": ["map_links"],
    "/statlist.php": ["map_links"],
    "/objects-bar.php": ["map_links"]
  }, 

  "settings": {
    "map_sector": {
      "file": "map.js"
    },
    "map_mmupdate": {
      "file": "map.js"
    },
    "map_links": {
      "file": "map.js",
      "description": "Добавлять ссылки быстрого перехода в сектор"
    }
  },

  "buttons": {
    "gohome": {
      "title": "Домой",
      "configure": {
        "sector": {
          "type": "select",
          "title": "Домашний сектор",
          "options": "__panel.map_names",
          "default": "__panel.map_current_sector_coords()",
          "file": "map_sectors.js"
        }
      },
      "img": "home.png", 
      "callback": "map_gohome", 
      "file": "map_buttons.js",
      "description": "Переход в домашний сектор"
    },
    "goport": {
      "title": "В порт",
      "configure": {
        "sector": {
          "type": "select",
          "title": "Домашний порт",
          "options": "__panel.map_get_ports_names()",
          "default": "",
          "file": "map_sectors.js"
        }
      },
      "img": "anchor.png", 
      "callback": "map_goport", 
      "file": "map_buttons.js",
      "description": "Переход в портовый сектор"
    },
    "goout": {
      "title": "Outland",
      "configure": {
        "port": {
          "type": "select",
          "title": "Порт отбытия",
          "options": "__panel.map_get_ports_ids()",
          "default": "",
          "file": "map_sectors.js"
        }
      },
      "img": "outland.png", 
      "callback": "map_goout", 
      "file": "map_buttons.js",
      "description": "Кнопка отплытия на Outland"
    },
    "gooverlord": {
      "title": "Overlord",
      "configure": {
        "port": {
          "type": "select",
          "title": "Порт отбытия",
          "options": "__panel.map_get_ports_ids()",
          "default": "",
          "file": "map_sectors.js"
        }
      },
      "img": "overlord.png", 
      "callback": "map_gooverlord", 
      "file": "map_buttons.js",
      "description": "Кнопка отплытия в Overlord"
    }
  }
}