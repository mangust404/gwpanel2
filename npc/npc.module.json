{
  "requires": "", 
  "excludes": "",
  "title": "Модуль для NPC",
  "weight":4, 
  "apply": {
    "/npc.php": ["npc_upd_status", "npc_links"],
    "/warlog.php": ["ncp_warlog_check"]
  }, 
  "settings": {
    "npc_upd_status": {
      "file": "npc.js"
    },
    "ncp_warlog_check": {
      "file": "npc.js"
    },
    "npc_links": {
      "description": "Добавлять ссылки на странице NPC",
      "file": "npc.js"
    },
    "npc_battle_end": {
      "file": "npc.js"
    }
  },
  "event": {
    "battleend": {
      "callback": "npc_battle_end", 
      "local": true
    }
  },
  "widgets": {
    "npc_z": {
      "title": "NPC [Z]",
      "configure": {
        "friends": {
          "type": "checkboxes",
          "title": "Друзья",
          "options": "__panel.npc_list_z",
          "default": [],
          "file": "npc_list.js"
        },
        "enemies": {
          "type": "checkboxes",
          "title": "Враги",
          "options": "__panel.npc_list_z",
          "default": [],
          "file": "npc_list.js"
        }
      },
      "callback": "npc_widget",
      "arguments": [2],
      "file": "npc_widgets.js", 
      "width": 6,
      "height": 2,
      "description": "Список NPC на острове Z-lands"
    },
    "npc_g": {
      "title": "NPC [G]",
      "configure": {
        "friends": {
          "type": "checkboxes",
          "title": "Друзья",
          "options": "__panel.npc_list_g",
          "default": [],
          "file": "npc_list.js"
        },
        "enemies": {
          "type": "checkboxes",
          "title": "Враги",
          "options": "__panel.npc_list_g",
          "default": [],
          "file": "npc_list.js"
        },
        "undress": {
          "type": "checkbox",
          "title": "Раздеваться при начале разговора :)",
          "options": "",
          "default": false,
          "file": "npc_list.js"
        }
      },
      "callback": "npc_widget",
      "arguments": [1],
      "file": "npc_widgets.js", 
      "width": 6,
      "height": 2,
      "description": "Список NPC на острове Ganja Island"
