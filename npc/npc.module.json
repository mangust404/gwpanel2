{
  "requires": "", 
  "excludes": "",
  "title": "Модуль для NPC",
  "weight":4, 
  "apply": {
    "/npc.php": ["npc_updStatus"],
    "/warlog.php": ["ncp_warlogCheck"]
  }, 
  "settings": {
    "npc_updStatus": {
      "file": "npc.js"
    },
    "ncp_warlogCheck": {
      "file": "npc.js"
    }
  },
  "event": {
    "npc_battleend": {
      "file": "npc.js", 
      "callback": "npc_battleEnd", 
      "local": true
    }
  },
  "widgets": {
    "npc_z": {
      "title": "NPC [Z]",
      "configure": {
        "friends": {
          "type": "checkboxes",
          "title": "Друзья",
          "options": "__panel.npc_list_z",
          "default": [],
          "file": "npc/npc_list.js"
        },
        "enemies": {
          "type": "checkboxes",
          "title": "Враги",
          "options": "__panel.npc_list_z",
          "default": [],
          "file": "npc/npc_list.js"
        },
        "undress": {
          "type": "checkbox",
          "title": "Раздеваться при начале разговора :)",
          "options": "",
          "default": false,
          "file": "npc/npc_list.js"
        }
      },
      "config_files": ["npc/npc_list.js"],
      "callback": "npc_widget",
      "arguments": [2],
      "file": "npc_widgets.js", 
      "width": 6,
      "height": 2,
      "description": "Список NPC на острове Z-lands"
    },
    "npc_g": {
      "title": "NPC [G]",
      "configure": {
