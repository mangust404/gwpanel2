{
  "title": "Базовый модуль GWPanel 2",
  "weight": -100,
  "apply": {
    "/me/": ["panel_homepage"],
    "/login.php": ["panel_login"],
    "*": ["panel_ajaxify"]
  },

  "settings": {
    "panel_homepage": {
      "file": "panel.js"
    },
    "panel_login": {
      "file": "panel.js"
    },
    "panel_ajaxify": {
      "file": "panel_ajax.js",
      "description": "Использовать AJAX (ускоряет загрузку страниц, ЭКСПЕРИМЕНТАЛЬНАЯ функция. Может вызывать побочные эффекты и конфликтовать с user-скриптами.)"
    }
  },

  "buttons": {
    "link": {
      "title": "Ссылка",
      "configure": {
        "link": {
          "type": "text",
          "title": "Ссылка для перехода, например http://www.ganjawars.ru/me/",
          "default": ""
        },
        "blank": {
          "type": "checkbox",
          "title": "В новом окне?",
          "default": false
        },
        "icon": {
          "type": "icon",
          "title": "Иконка",
          "default": "icon-action"
        }
      }, 
      "callback": "panel_link", 
      "file": "panel_buttons.js",
      "description": "Любая ссылка на любую страницу",
      "img": "link.png"
    },
    "settings": {
      "title": "Настройки",
      "callback": "panel_settings_editor",
      "file": "panel_settings.js",
      "img": "settings.png",
      "description": "Кнопка настроек"
    },
    "settings_page": {
      "title": "Настройки страницы",
      "callback": "panel_settings_page",
      "file": "panel_settings.js",
      "img": "settings.png",
      "description": "Кнопка настроек для текущей страницы"
    },
    "exit": {
      "title": "Выход",
      "callback": "panel_exit",
      "img": "exit.png",
      "description": "Кнопка выхода из игры",
      "file": "panel_buttons.js"
    }
  }
}
