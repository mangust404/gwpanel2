{
  "title": "Базовый модуль GWPanel 2",
  "weight": -100,
  "pages": {
    "/me/": ["panel_homepage"],
    "/login.php": ["panel_login"],
    "*": ["panel_ajaxify", "panel_header"]
  },

  "events": {
    "header_update": {
      "title": "Обновление информации в шапке"
    }
  },

  "listeners": {
    "header_update": ["panel_update_listener"]
  },

  "methods": {
    "panel_homepage": {
      "file": "panel.js"
    },
    "panel_login": {
      "file": "panel.js"
    },
    "panel_ajaxify": {
      "file": "panel_ajax.js",
      "title": "Использовать AJAX (ускоряет загрузку страниц, ЭКСПЕРИМЕНТАЛЬНАЯ функция. Может вызывать побочные эффекты и конфликтовать с user-скриптами.)"
    },
    "panel_header": {
      "file": "panel_header.js",
      "title": "&quot;Оживление&quot; шапки",
      "configure": {
        "timeout": {
          "type": "select",
          "title": "Частота обновления данных",
          "options": {
            "10": "10 секунд (Осторожно! Большой траффик!)",
            "20": "20 секунд",
            "30": "30 секунд",
            "60": "1 минута",
            "120": "2 минуты",
            "300": "5 минуты"
          },
          "default": "30"
        }
      }
    },
    "panel_update_listener": {
      "file": "panel_header.js"
    }
  },

  "buttons": {
    "link": {
      "title": "Ссылка",
      "configure": {
        "link": {
          "type": "text",
          "title": "Ссылка для перехода, например http://www.ganjawars.ru/me/",
          "default": ""
        },
        "blank": {
          "type": "checkbox",
          "title": "В новом окне?",
          "default": false
        },
        "icon": {
          "type": "icon",
          "title": "Иконка",
          "default": "icon-action"
        }
      }, 
      "callback": "panel_link", 
      "file": "panel_buttons.js",
      "description": "Любая ссылка на любую страницу",
      "img": "link.png"
    },
    "settings": {
      "title": "Настройки",
      "callback": "panel_settings_editor",
      "file": "panel_settings.js",
      "img": "settings.png",
      "description": "Кнопка настроек"
    },
    "settings_page": {
      "title": "Настройки страницы",
      "callback": "panel_settings_page",
      "file": "panel_settings.js",
      "img": "settings.png",
      "description": "Кнопка настроек для текущей страницы"
    },
    "exit": {
      "title": "Выход",
      "callback": "panel_exit",
      "img": "exit.png",
      "description": "Кнопка выхода из игры",
      "file": "panel_buttons.js"
    }
  }
}
