{ 
  "requires": ["battlefix"], 
  "excludes": [],
  "weight": -1, 
  "title": "Дополнения для боев",
  "apply": {
    "/b0/btl.php": ["battle_fix", "battle_js_init", "battle_generator", "battle_redo", "battle_to_allies"],
    "/b0/b.php": ["battle_std_init", "battle_generator", "battle_redo", "battle_to_allies"],
    "/warlog.php": ["battle_end"]
  },
  "settings": {
    "battle_fix": {
      "file": "battle.js"
    },
    "battle_js_init": {
      "file": "battle.js"
    },
    "battle_std_init": {
      "file": "battle.js"
    },
    "battle_generator": {
      "description": "Генератор ходов",
      "configure": {
        "genuniq": {
          "type": "checkbox", 
          "default": 1,
          "title": "Генерировать случайный ходы для обеих рук",
          "description": "Если вы включите эту опцию, то при генерации случайного хода направления ударов не будут никогда совпадать (для двуруких)"
        },
        "autogen": {
          "type": "checkbox", 
          "default": 1,
          "title": "Генерировать ход",
          "description": "Если эта галочка установлена, то галочка &quot;Генерировать ход&quot; будет автоматически выставляться в бою"
        }
      },
      "file": "battle.js"
    },
    "battle_redo": {
      "description": "Галочка &quot;Повторить ход&quot;",
      "configure": {
        "autoredo": {
          "type": "checkbox", 
          "default": 0,
          "title": "Запоминать ход",
          "description": "Если эта галочка установлена, то галочка &quot;Запоминать ход&quot; будет автоматически выставляться в бою."
        }
      },
      "file": "battle.js"
    },
    "battle_end": {
      "file": "battle.js"
    },
    "battle_to_allies": {
      "description": "Галочка &quot;своим&quot;",
      "file": "battle.js"
    }
  }
}