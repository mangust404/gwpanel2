{
  "requires": "", 
  "excludes": "",
  "access": "", 
  "title": "Дополнения для домашней странички",
  "weight": 1, 
  "apply": {
    "/me/": {
      "home_durability": "home.js"
    },
    "*": {
      "home_health": "home_health.js"
    }
  }, 
  "settings": {
    "nohht": {
      "type": "checkbox",
      "title": "Не показывать таймеры на домашней страничке",
      "default_value": 0
    },
    "nodura": {
      "type": "checkbox",
      "title": "Не показывать прочность предметов на домашней страничке",
      "default_value": 0
    }
  },
  
  "widgets": {
    "health_widget": {
      "title": "Индикатор выздоровления",
      "configure": true,
      "config_params": ["timers", "autohide", "size"],
      "config_types": ["checkbox", "checkbox", "select"],
      "config_titles": ["Показывать таймеры", "Скрывать когда здоровье 100%", "Высота"],
      "config_values": [1, 1, {"2": "средний", "1": "маленький", "3": "большой"}],
      "config_defaults": [1, 1, "2"],
      "callback": "home_health_widget",
      "file": "home_widgets.js", 
      "width": 2,
      "height": 1
    }
  }
}