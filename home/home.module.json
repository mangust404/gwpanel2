{
  "requires": "", 
  "excludes": "",
  "access": "", 
  "title": "Дополнения для домашней странички",
  "weight": 1, 
  "apply": {
    "/me/": ["home_durability"],
    "*": ["home_health"]
  }, 
  "settings": {
    "home_durability": {
      "file": "home.js",
      "description": "Отображение прочности предметов"
    },
    "home_health": {
      "file": "home_health.js"
    },
    "home_header_update": {
      "file": "home_health.js"
    }
  },
  "event": {
    "header_update": {
      "callback": "home_header_update"
    }
  },
  
  "widgets": {
    "health_widget": {
      "title": "Индикатор выздоровления",
      "configure": {
        "timers": {
          "type": "checkbox",
          "title": "Показывать таймеры",
          "default": true
        },
        "autohide": {
          "type": "checkbox",
          "title": "Скрывать когда здоровье 100%",
          "default": true
        },
        "size": {
          "type": "select",
          "title": "Высота",
          "options": {"1": "маленький", "2": "средний", "3": "большой"},
          "default": "2"
        }
      },
      "callback": "home_health_widget",
      "file": "home_widgets.js", 
      "width": 2,
      "height": 1
    }
  }
}